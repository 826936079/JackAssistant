        <item name="windowNoTitle">true</item>
    </style>

    <style name="send_message_style" >

        <item name="android:layout_marginTop">@dimen/input_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/input_margin_vertical</item>

    </style>

    <style name="func_and_send_style" parent="send_message_style" >

        <item name="android:layout_height">@dimen/func_and_send_height</item>
        <item name="android:layout_width">@dimen/func_and_send_width</item>
        <item name="android:layout_marginLeft">@dimen/more_button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/more_button_margin_right</item>
        <item name="android:gravity">center</item>


    </style>

