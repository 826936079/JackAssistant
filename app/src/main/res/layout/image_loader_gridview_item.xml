<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_loader_item_height"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pictures_no"
        android:id="@+id/imageLoaderItemImageView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/picture_unselected"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/image_loader_item_selected_margin_top"
        android:layout_marginTop="@dimen/image_loader_item_selected_margin_right"
        android:background="@null"
        android:clickable="false"
        android:id="@+id/imageLoaderItemSelectedImageView"/>

</RelativeLayout>