<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center"
              android:padding="@dimen/dialog_audio_recorder_padding"
              android:background="@drawable/audio_recorder_dialog_loading_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dialog_audio_recorder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:src="@drawable/audio_recorder_recording"/>

        <ImageView
            android:id="@+id/iv_dialog_audio_recorder_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:src="@drawable/audio_recorder_v1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_audio_recorder_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_audio_recorder_text_view_margin_top"
        android:text="@string/audio_recorder_dialog_normal"
        android:textColor="@color/white"/>

</LinearLayout>
